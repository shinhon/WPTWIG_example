{% extends "base.twig" %}

{% block content %}
    {{ include('components/headerDeco.twig') }}
    <div class="c-container">
        <div class="c-container__inner l-gap">
            <div>
                <h3 class="text-h3">{{ title }}</h3>
            </div>
            <div class="flex flex-wrap items-stretch -mx-4 pt-9">
                {% if posts | length > 0 %}
                    {% for item in posts %}
                    <div class="w-full sm:w-1/2 px-4 mt-7">
                        {{ include('components/projectCard.twig') }}
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="w-full text-center text-pri-700 mt-16">COMING SOON</div>
                {% endif %}
            </div>
            {{ include('components/pagination.twig') }}
        </div>
    </div>
{% endblock %}